<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

	<id>imputationserver-hla</id>

	<formats>
		<format>zip</format>
		<format>tar.gz</format>
		<format>dir</format>
	</formats>

	<includeBaseDirectory>false</includeBaseDirectory>

	<dependencySets>

		<dependencySet>
			<scope>provided</scope>
			<outputDirectory></outputDirectory>
			<includes>
				<include>cloudgene:cloudgene:*:*</include>
			</includes>
			<unpack>true</unpack>
			<useProjectArtifact>false</useProjectArtifact>
			<!-- you may place excludes here -->
		</dependencySet>

	</dependencySets>

	<files>
		<file>
			<outputDirectory>/</outputDirectory>
			<source>${project.build.directory}/${project.artifactId}.jar</source>
			<destName>${project.artifactId}.jar</destName>
		</file>
	</files>

	<fileSets>
		<fileSet>
			<outputDirectory>/</outputDirectory>
			<directory>files</directory>
			<excludes>
				<exclude>minimac4.yaml</exclude>
				<exclude>imputationserver-beagle.yaml</exclude>
                <exclude>imputationserver-pgs.yaml</exclude>
			</excludes>
		</fileSet>
	</fileSets>

</assembly>